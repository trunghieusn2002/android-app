<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/imgCategoryItem"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp" android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" app:layout_constraintDimensionRatio="1:1" android:scaleType="fitCenter"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCategoryItemName"
            app:layout_constraintTop_toBottomOf="@+id/imgCategoryItem"
            app:layout_constraintStart_toStartOf="@+id/imgCategoryItem" app:layout_constraintEnd_toEndOf="@+id/imgCategoryItem"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
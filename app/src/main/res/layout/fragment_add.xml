<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="347dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="24dp"
        android:text="Tiêu đề"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/spCategory"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="211dp"
        android:layout_height="35dp"
        android:layout_marginBottom="12dp"
        android:hint="Thể loại"
        app:layout_constraintBottom_toTopOf="@+id/etPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_marginBottom="36dp"
        android:hint="Tiền"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/etDiaChi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Selected Image"
        android:src="@drawable/uploadimage"
        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDiaChi"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:hint="Địa Chỉ"
        app:layout_constraintBottom_toTopOf="@+id/etMoTa"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMoTa"
        android:layout_width="360dp"
        android:layout_height="143dp"
        android:hint="Mô tả"
        android:inputType="textMultiLine"
        android:minLines="2"
        app:layout_constraintBottom_toTopOf="@+id/btnUpload"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="142dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="16dp"
        android:text="Đăng bài"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>